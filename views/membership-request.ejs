<!-- views/membership-request.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request Membership - Members Only Club</title>
    <link rel="stylesheet" href="/styles/main.css">
  </head>
  <body>
    <div class="container">
      <div class="auth-container">
        <h1>Request Membership</h1>
        <p class="subtitle">Enter the secret password to become a member</p>
        
        <div class="member-info">
          <h3>Hello, <%= user.first_name %>!</h3>
          <p>To gain access to exclusive member features, you need to provide the secret membership password.</p>
        </div>
        
        <!-- Display errors if any -->
        <% if (locals.errors && errors.length > 0) { %>
          <div class="error-container">
            <ul class="error-list">
              <% errors.forEach(error => { %>
                <li class="error-message"><%= error.msg %></li>
              <% }); %>
            </ul>
          </div>
        <% } %>
        
        <form action="/auth/membership-request" method="POST" class="auth-form">
          <div class="form-group">
            <label for="membership_password">Membership Password</label>
            <input 
              id="membership_password" 
              name="membership_password" 
              type="password" 
              class="form-input"
              placeholder="Enter the secret password"
              required 
            />
            <div class="form-help">
              <small>Ask an existing member for the secret password</small>
            </div>
          </div>
          
          <button type="submit" class="btn btn-primary btn-full">Request Membership</button>
        </form>
        
        <div class="auth-links">
          <p><a href="/">‚Üê Back to Dashboard</a></p>
        </div>
      </div>
    </div>
  </body>
</html>