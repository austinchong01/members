<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>People Database</title>
</head>
<body>
    <h1>People in Database</h1>
    
    <% if (people && people.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                <% people.forEach(function(person) { %>
                    <tr>
                        <td><%= person.id %></td>
                        <td><%= person.name %></td>
                        <td><%= person.age %></td>
                        <td><%= person.created_at %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No people found in the database.</p>
    <% } %>
</body>
</html>